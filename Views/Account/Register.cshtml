@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>>

<form asp-action="Register" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="validation"></div>
    <div class="form-group">
        <label asp-for="Login">Введите имя:</label>
        <input type="text" asp-for="Login" class="form-control" />
        <span asp-validation-for="Login"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Введите Email:</label>
        <input type="text" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Введите пароль:</label>
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Подтвердите введенный пароль:</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <input type="submit" value="Зарегистрироваться" class="btn btn-primary" />
</form>

