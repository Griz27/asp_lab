@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>
<a asp-action="Register">Зарегистрироваться</a>
<form asp-action="Login" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="validation"></div>
    <div class="form-group">
        <label asp-for="Login">Введите имя:</label>
        <input type="text" asp-for="Login" class="form-control" />
        <span asp-validation-for="Login"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Введите пароль:</label>
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <input type="submit" value="Войти" class="btn btn-primary"/>
</form>

